import socket

HOST = ''  # Symbolic name meaning all available interfaces
PORT = 5000  # Arbitrary non-privileged port

# create a socket object
with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as s:
    # bind socket object to a specific address and port
    s.bind((HOST, PORT))
    s.listen(1)  # maximum number of queued connections

    print('Server started and listening on port', PORT)

    while True:
        # accept a new client connection
        conn, addr = s.accept()
        print('Connected by', addr)

        # receive data from the client
        data = conn.recv(1024).decode()
        print('Received data:', data)

        if data.startswith('s'):  # start the connection
            conn.sendall(b'200 OK: READY')

            while True:
                # receive data from the client
                data = conn.recv(1024).decode()
                print('Received data:', data)

                if data.startswith('t'):  # close the connection
                    break

                # reverse the message and send it back to the client
                msg = data[::-1]
                conn.sendall(msg.encode())

        # close the connection
        conn.close()
