import socket

def reverse_string(string):
    return string[::-1]

def client_connection(connection):
    while True:
        data = connection.recv(1024)
        if not data:
            break
        client_message = data.decode()
        if client_message.startswith("s 0"):
            connection.sendall("200 OK: READY".encode())
        elif client_message.startswith("t 0"):
            connection.close()
            break
        else:
            reversed_message = reverse_string(client_message)
            connection.sendall(reversed_message.encode())
    connection.close()

HOST = ''  
PORT = 8888

with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as socket:
    socket.bind((HOST, PORT))
    socket.listen(1)
    while True:
        connection, addr = socket.accept()
        print('Connected by', addr)
        client_connection(connection)